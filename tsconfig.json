{
	"compilerOptions": {
		"allowJs": false,
		"target": "es6",
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"outDir": "lib",
		"experimentalDecorators": true,
		"lib": ["es2017", "dom"],
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"preserveConstEnums": true,
		"removeComments": false,
		"sourceMap": true,
		"strict": false
	},
	"include": ["./src/**/*", "./__test__/**/*"],
	"exclude": ["./__test__/__snapshots__/**/*"]
}
