{
	"name": "acorn-typescript",
	"version": "1.4.13",
	"description": "Acorn plugin that parses TypeScript",
	"source": "src/index.ts",
	"main": "lib/index.js",
	"module": "lib/index.mjs",
	"types": "lib/index.d.ts",
	"scripts": {
		"build": "microbundle --define process.env.NODE_ENV=production --no-sourcemap --tsconfig ./tsconfig.json --format esm,cjs",
		"format": "prettier --write .",
		"test": "vitest run",
		"test:test262": "npm run build && node ./__test__/run_test262.mjs"
	},
	"exports": {
		".": [
			{
				"import": "./lib/index.mjs",
				"require": "./lib/index.js",
				"default": "./lib/index.js"
			},
			"./lib/index.js"
		]
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sveltejs/acorn-typescript.git"
	},
	"author": "tyrealhu and the Svelte team",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/sveltejs/acorn-typescript/issues"
	},
	"homepage": "https://github.com/sveltejs/acorn-typescript#readme",
	"devDependencies": {
		"acorn": "~8.9.0",
		"acorn-jsx": "~5.3.2",
		"microbundle": "^0.15.1",
		"prettier": "~3.5.2",
		"typescript": "^4.8.4",
		"test262": "git+https://github.com/tc39/test262.git#dac69563480b9f22709fd49d61a32b3a0513b6b1",
		"test262-parser-runner": "^0.5.0",
		"vitest": "^3.0.7"
	},
	"peerDependencies": {
		"acorn": ">=8.9.0"
	}
}
